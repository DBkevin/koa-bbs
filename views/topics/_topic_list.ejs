<% if(locals.topics){%>
  <ul class="list-unstyled">
      <% topics.forEach(function(topic){ %>
      <li class="media">
        <div class="media-left">
          <a href="/users/<%= topic.U_id  %>">
            <img class="media-object img-thumbnail mr-3" style="width: 52px; height: 52px;" src="/avatar/<%=topic.U_avatar %>" title=" <%= topic.U_name%> ">
          </a>
        </div>
        <div class="media-body">

          <div class="media-heading mt-0 mb-1">
            <a href="/topics/<%=topic.T_id %>" title="<%=topic.T_title%>">
                <%=topic.T_title%>
            </a>
            <a class="float-right" href="/topics/<%=topic.T_id %>">
              <span class="badge badge-secondary badge-pill"> <%= topic.reply_count %></span>
            </a>
          </div>
          <small class="media-body meta text-secondary">
            <a class="text-secondary" href="/categories/<%= topic.C_id %>" title="<%= topic.C_name %>">
              <i class="fa fa-folder"></i>
              <%= topic.C_name %>
            </a>

            <span> • </span>
            <a class="text-secondary" href="/users/<%= topic.U_id  %>" title="<%= topic.U_name %>">
              <i class="fa fa-user"></i>
             <%= topic.U_name %>
            </a>
            <span> • </span>
            <i class="fa fa-clock"></i>
            <span class="timeago" title="最后活跃于：<%= topic.updated_at %>"><%= topic.updated_at %></span>
          </small>
        </div>
      </li>
        <hr>
      <% }) %>
  </ul>
<% }else{ %>
  <div class="empty-block">暂无数据 ~_~ </div>
<% } %>