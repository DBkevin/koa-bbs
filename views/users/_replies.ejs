<% if(locals.replies){%>
  <ul class="list-unstyled">
    <% replies.forEach(function(reply,index){ %>
        <% if(index==0){ %>
        <li class="list-group-item pl-2 pr-2 border-right-0 border-left-0  border-top-0 ">
        <a href="/topics/<%=reply.T_id %>">
            <%= reply.T_title %>
        </a>
        <div class="reply-content text-secondary mt-2 mb-2">
          <%- reply.content %>
        </div>
         <div class="text-secondary" style="font-size:0.9em;">
          <i class="fa fa-clock"></i> 回复于 <%= reply.created_at  %>
        </div>
      </li>
       <% }else{ %>
        <li class="list-group-item pl-2 pr-2 border-right-0 border-left-0">
            <a href="/topics/<%=reply.T_id %>">
            <%= reply.T_title %>
        </a>
        <div class="reply-content text-secondary mt-2 mb-2">
          <%- reply.content %>
        </div>
         <div class="text-secondary" style="font-size:0.9em;">
          <i class="fa fa-clock-o"></i> 回复于 <%= reply.created_at  %>
        </div>
        </li>
        <% } %>
      <% }) %>
  </ul>
<% }else{ %>
  <div class="empty-block">暂无数据 ~_~ </div>
<% } %>
<%# 分页 %>
<div class="mt-4 pt-1">
 <nav aria-label="Page navigation" >
    <ul class="pagination">
    <% pagination.forEach(function (item){ %>
        <%- item %>
    <%  }) %>
    </ul>
 </nav>
</div>