<% if(locals.topics){%>
  <ul class="list-unstyled">
    <% topics.forEach(function(topic,index){ %>
        <% if(index==0){ %>
        <li class="list-group-item pl-2 pr-2 border-right-0 border-left-0  border-top-0 ">
        <a href="/topics/<%=topic.T_id %>">
            <%= topic.T_title %>
        </a>
        <span class="meta float-right text-secondary">
         <%= topic.reply_count %> 回复
          <span> ⋅ </span>
        <%= topic.updated_at %>
        </span>
      </li>
       <% }else{ %>
          <li class="list-group-item pl-2 pr-2 border-right-0 border-left-0">
        <a href="/topics/<%=topic.T_id %>">
            <%= topic.T_title %>
        </a>
        <span class="meta float-right text-secondary">
         <%= topic.reply_count %> 回复
          <span> ⋅ </span>
        <%= topic.updated_at %>
        </span>
      </li>
        <% } %>
      <% }) %>
  </ul>
<% }else{ %>
  <div class="empty-block">暂无数据 ~_~ </div>
<% } %>
<%# 分页 %>
<div class="mt-4 pt-1">
 <nav aria-label="Page navigation" >
    <ul class="pagination">
    <% pagination.forEach(function (item){ %>
        <%- item %>
    <%  }) %>
    </ul>
 </nav>
</div>