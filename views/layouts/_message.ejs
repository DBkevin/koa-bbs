<% if(locals.info){%>
    <div class="flash-message">
        <p class="alert alert-info">
            <%= info %>
        </p>
    </div>
    <% }else if(locals.danger){ %>
        <div class="flash-message">
            <p class="alert alert-danger">
                <%= danger%>
            </p>
        </div>
        <% }else if(locals.success){ %>
            <div class="flash-message">
                <p class="alert alert-success">
                    <%= success%>
                </p>
            </div>
            <% }else if(locals.warning){ %>
                <div class="flash-message">
                    <p class="alert alert-warning">
                        <%= warning%>
                    </p>
                </div>
                <% }%>
